# Vidalytics Environment Configuration
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to version control

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# YouTube Data API v3 (Required for analytics)
# Get from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google OAuth (Required for YouTube authentication)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# OpenAI API (Optional - for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend server configuration
HOST=0.0.0.0
PORT=8000

# Frontend configuration
FRONTEND_URL=http://localhost:3000

# OAuth redirect URIs
OAUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database (auto-created)
DATABASE_URL=sqlite:///./Vidalytics.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Generate secure keys using: python -c "import secrets; print(secrets.token_urlsafe(64))"
SESSION_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS origins (for frontend)
CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Cache configuration
CACHE_TTL=3600
CACHE_SIZE=1000

# Backup settings
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
