# ==============================================
# MYTA Backend Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ==============================================
# Application Settings
# ==============================================
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ==============================================
# Email Service Configuration
# ==============================================
# Choose email provider: true for Resend, false for SMTP
USE_RESEND=true

# Resend Configuration (Recommended for production)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# SMTP Configuration (Alternative to Resend)
# Only needed if USE_RESEND=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Sender Information
FROM_EMAIL=noreply@myta.app
FROM_NAME=MYTA Team

# ==============================================
# Database - Supabase
# ==============================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Legacy database (if needed)
DATABASE_URL=sqlite:///./Vidalytics.db
DATABASE_ECHO=false

# ==============================================
# Authentication & Security
# ==============================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# Legacy security keys
BOSS_AGENT_SECRET_KEY=generate_secure_random_key_here
SESSION_SECRET_KEY=generate_secure_random_key_here

# ==============================================
# Payment Processing - Stripe
# ==============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (from Stripe Dashboard)
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_SOLO_PRO_MONTHLY=price_solo_pro_monthly_id
STRIPE_PRICE_TEAMS_MONTHLY=price_teams_monthly_id

# ==============================================
# YouTube API & OAuth
# ==============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google
OAUTH_REDIRECT_URI=http://localhost:8888/auth/callback

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here
YT_API_KEY=your_youtube_api_key_here

# ==============================================
# AI Services
# ==============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# Redis (Session Management & Caching)
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# CORS Configuration
# ==============================================
CORS_ORIGINS=http://localhost:3000,https://app.myytagent.app

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
API_RATE_LIMIT=100

# ==============================================
# Agent System Configuration
# ==============================================
AGENT_CACHE_SIZE=5000
AGENT_CACHE_TTL=7200
MAX_CONCURRENT_AGENTS=10

# ==============================================
# Security Configuration
# ==============================================
SECURITY_HEADERS_STRICT=true
CSRF_PROTECTION_STRICT=true

# ==============================================
# Backup Configuration
# ==============================================
BACKUP_FREQUENCY=daily
BACKUP_TIME=02:00
BACKUP_COMPRESSION=true
BACKUP_MAX_COUNT=7
BACKUP_CLEANUP_ENABLED=true
BACKUP_DIRECTORY=./backups

# ==============================================
# Monitoring & Error Tracking
# ==============================================
SENTRY_DSN=
